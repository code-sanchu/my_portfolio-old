<style>
  .box1 {
    position: absolute;
    left: 20%;
    top: 10%;
    width: 12px;
    height: 65px;
    background: rgb(237, 109, 236);
  }
  .container1 {
    position: absolute;
    left: 60%;
    top: 13%;
    display: flex;
    flex-direction: column;
    gap: 8px;
  }
  .box2 {
    width: 60px;
    height: 10px;
    background: rgba(251, 145, 42, 255);
  }
  .box3 {
    width: 60px;
    height: 10px;
    background: rgba(240, 251, 10, 255);
    transform-origin: center right 0px;
  }
  .box2a {
  }
  .box2b {
  }
  .box4 {
    position: absolute;
    left: 15%;
    top: 60%;
    width: 0px;
    height: 10px;
    background: rgba(164, 219, 66, 255);
  }
  .box5 {
    position: absolute;
    left: 78%;
    top: 55%;
    width: 11px;
    height: 20px;
    background: #082b5d;
  }
  .box6 {
    position: absolute;
    left: 50%;
    top: 75%;
    width: 60px;
    height: 11px;
    background: #082b5d;
  }
</style>

<script>
  import anime from "animejs/lib/anime.es";

  const box1 = anime.timeline({
    targets: ".box1",
    // backgroundColor: "#FEA",
    easing: "cubicBezier(.5, .05, .1, .3)",
  });
  box1.add({
    height: "20px",
    translateY: "-30px",
    duration: 600,
  });
  box1.add({
    height: "60px",
    // scaleY: "0.8",
    duration: 400,
  });
  box1.add({
    delay: 2000,
    height: "0px",
    duration: 400,
  });
  box1.add({
    height: "12px",
    width: "60px",
    duration: 400,
  });

  const box2 = anime.timeline({
    targets: ".box2",
    easing: "cubicBezier(.5, .05, .1, .3)",
  });
  box2.add({
    width: "0px",
    duration: 600,
  });
  box2.add({
    width: "60px",
    duration: 600,
  });
  box2.add({
    delay: 1500,
    scaleX: 0.4,
    duration: 600,
    backgroundColor: "rgba(251, 177, 167, 255)",
  });

  const box3 = anime.timeline({
    targets: ".box3",
    easing: "cubicBezier(.5, .05, .1, .3)",
  });
  box3.add({
    scaleX: 0,
    duration: 600,
  });
  box3.add({
    scaleX: 1,
    duration: 600,
  });
  box3.add({
    delay: 1500,
    duration: 600,
    backgroundColor: "rgb(153,104,180)",
  });

  const box4 = anime.timeline({
    targets: ".box4",
    easing: "cubicBezier(.5, .05, .1, .3)",
  });
  box4.add({
    width: "65px",
    duration: 600,
  });

  const box5 = anime.timeline({
    targets: ".box5",
    easing: "cubicBezier(.5, .05, .1, .3)",
  });
  box5.add({
    translateY: 20,
    height: "65px",
    duration: 600,
    backgroundColor: "#0f52b2",
  });
  box5.add({
    delay: 800,
    translateY: -20,
    height: "11px",
    width: 50,
    duration: 500,
    backgroundColor: "#010408",
  });

  const box6 = anime.timeline({
    targets: ".box6",
    easing: "cubicBezier(.5, .05, .1, .3)",
  });
  box6.add({
    width: 11,
    height: "65px",
    duration: 600,
    backgroundColor: "#36e1a8",
  });
</script>
